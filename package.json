{
  "name": "viveui",
  "version": "1.0.16",
  "description": "Vive UI - custom components library created by ktcotz for internal use",
  "type": "module",
  "license": "MIT",
  "bin": {
    "vive-ui": "./dist/bin/cli.js"
  },
  "scripts": {
    "dev": "vite",
    "storybook": "npm run tailwind:watch | npm run storybook:dev",
    "storybook:dev": "storybook dev -p 6006",
    "build-storybook": "npm run tailwind:build && storybook build",
    "tailwind:build": "npx tailwindcss --cwd ./src -i ./style/style.css -o ./dist/styles.css",
    "tailwind:watch": "npm run tailwind:build -- --watch",
    "preview": "vite preview",
    "lint": "eslint .",
    "build": "tsc && npm run build:types",
    "build:types": "tsc --project tsconfig.build.json",
    "publish": "npm publish --access public"
  },
  "peerDependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "inquirer": "^12.7.0",
    "node-fetch": "^3.3.2",
    "tailwind-merge": "^2.5.4"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.0.1",
    "@eslint/js": "^9.13.0",
    "@storybook/addon-docs": "^9.0.15",
    "@storybook/addon-onboarding": "^9.0.15",
    "@storybook/react-vite": "^9.0.15",
    "@tailwindcss/cli": "^4.0.6",
    "@tailwindcss/vite": "^4.1.11",
    "@types/node-fetch": "^2.6.12",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.3",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.13.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "eslint-plugin-storybook": "^9.0.15",
    "globals": "^15.11.0",
    "postcss": "^8.4.48",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.13",
    "storybook": "^9.0.15",
    "tailwindcss": "^4.1.10",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.11.0",
    "vite": "^5.4.10",
    "vite-tsconfig-paths": "^5.1.2"
  },
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended"
    ]
  }
}
