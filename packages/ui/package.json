{
  "name": "vive-ui",
  "version": "1.0.8",
  "description": "Vive UI - custom components library created by ktcotz for internal use",
  "type": "module",
  "license": "MIT",
  "bin": {
    "vive-ui": "./dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "storybook": "npm run tailwind:watch | npm run storybook:dev",
    "storybook:dev": "storybook dev -p 6006",
    "build-storybook": "npm run tailwind:build && storybook build",
    "tailwind:build": "tailwindcss -i ./src/style/style.css -o ./dist/styles.css --minify",
    "tailwind:watch": "npm run tailwind:build -- --watch",
    "lint": "eslint .",
    "build": "rollup -c --bundleConfigAsCjs",
    "build:types": "tsc --project tsconfig.build.json",
    "publish": "npm publish",
    "test": "vitest"
  },
  "peerDependencies": {
    "@radix-ui/react-slot": "^1.2.3",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "inquirer": "^12.7.0",
    "node-fetch": "^3.3.2",
    "tailwind-merge": "^2.5.4"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.0.1",
    "@eslint/js": "^9.13.0",
    "@mdx-js/react": "^3.1.0",
    "@radix-ui/react-slot": "^1.2.3",
    "@rollup/plugin-alias": "^5.1.1",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "@storybook/addon-docs": "^9.0.15",
    "@storybook/addon-onboarding": "^9.0.15",
    "@storybook/react-vite": "^9.0.15",
    "@tailwindcss/postcss": "^4.1.11",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/node-fetch": "^2.6.12",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.13.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "eslint-plugin-storybook": "^9.0.15",
    "fast-glob": "^3.3.3",
    "globals": "^15.11.0",
    "jsdom": "^26.1.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.13",
    "rimraf": "^6.0.1",
    "rollup": "^4.46.2",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.36.0",
    "storybook": "^9.0.15",
    "tailwindcss": "^4.1.11",
    "ts-node": "^10.9.2",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.11.0",
    "vitest": "^3.2.4"
  },
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended"
    ]
  }
}
